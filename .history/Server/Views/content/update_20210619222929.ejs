<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Business Contacts</h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Name</span>
            <input type="text" class="form-control" placeholder="Enter Clothing Name" aria-label="Clothing Name" aria-describedby="Clothing Name"
            name="name" value="<%= clothing.name %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Number</span>
            <input type="text" class="form-control" placeholder="Enter Clothing Name" aria-label="Clothing Number" aria-describedby="Clothing Number"
            name="number" value="<%= clothing.number %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Email</span>
            <input type="text" class="form-control" placeholder="Enter Clothing Category" aria-label="Clothing Email" aria-describedby="Clothing Email"
            name="email" value="<%= clothing.email %>" required>
        </div>

            <% if(title == "Edit") { %>
                <button type="submit" id="editButton" class="btn btn-primary"><i class="fas fa-edit fa-lg"></i> Edit</button>
            <% } else { %>
                <button type="submit" id="addButton" class="btn btn-primary"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
            <% } %>  
            
            <a href="/clothing-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
        </div>
    </form>
</div>